extends layout

block content
    .form.ready.animated.fadeInDown
        .container
            .row
                .col-md-12
                    img.img-responsive(src='img/logo-blanc.png')
                    h1 Pour participer, renseignez les informations suivantes :
        form.container.form-input(autocomplete='false')
            .row
                .form-group.col-md-6
                    input.form-control(name='nom' placeholder='Votre nom' type='text' minlength='2' required)
                    small Obligatoire
                    .error.bg-danger.text-danger.hide
                .form-group.col-md-6
                    input.form-control(name='prenom' placeholder='Votre pr√©nom' type='text' minlength='2' required)
                    small Obligatoire
                    .error.bg-danger.text-danger.hide
            .row
                .form-group.col-md-6
                    input.form-control(name='email' placeholder='Votre adresse e-mail' type='email' required)
                    small Obligatoire
                    .error.bg-danger.text-danger.hide
                .form-group.col-md-6
                    input.form-control(name='adresse' placeholder='Votre adresse' type='text' required)
                    small Obligatoire
                    .error.bg-danger.text-danger.hide
            .row
                .form-group.col-md-4
                    input.form-control(name='codePostal' placeholder='Votre code postal' type='text' required)
                    small Obligatoire
                    .error.bg-danger.text-danger.hide
                .form-group.col-md-8
                    input.form-control(name='ville' placeholder='Votre ville' type='text' required)
                    small Obligatoire
                    .error.bg-danger.text-danger.hide
            .row
                .col-md-12.checkbox-button
                    input#declare(name='declare' value='true' type='checkbox' checked)
                    label(for='declare')
                        | J&apos;accepte de recevoir la newsletter et des annonces publicitaires de la part de UHD Partners.
                    .check
                    .error.bg-danger.text-danger.hide

        .col-btn.back
            button.btn(type='submit') Annuler
        .col-btn.continue
            button.btn(type='submit') Continuer
