extends layout

block content
    #fin.container-fluid(class= (exists ? 'dejaJoue' : (win ? 'gagne' : 'perdu') ))
        .row
            .fin-left.animated.fadeInLeft
                .resume(class= exists ? 'hide' : null)
                    h3 Vous avez obtenu
                    h1= count
                    h4 bonnes r&eacute;ponses
                    h3 sur #{ numOfQuestions } questions

block scripts
    script(src='js/script.js')
    script(src='js/fin.js')
    script(src='js/app.js')

