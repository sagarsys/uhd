extends layout

block content
    .quizz.ready.animated.fadeInDown
        .container
            .row
                .col-md-12
                    img.img-responsive(src='/img/logo-blanc.png')
                    h3 Question #[span  ${count}]
                    h1= question
    .answers
        .container
            .row
                .col-md-12
                    h2 Oui
                .col-md-12
                    h2 Non
                .col-md-12
                    button.btn(data-toggle='modal' data-target='#myModal') Valider ma r&eacute;ponse
    #myModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='myModalLabel')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h4.modal-title Question #[span  #{count} ]
                    h3.modal-title= question
                .modal-body
                    .container
                        .row
                            .col-md-6
                                h3 La r&eacute;ponse est :
                                h1= answer
                                //p
                                    | Lorem ipsum dolor sit amet, consectetur adipisicing elit. Cupiditate distinctio eius et hic impedit magni quae quaerat, tenetur vitae. Aliquam amet laboriosam nisi numquam officiis quis voluptas? Est, nemo, temporibus.
                            .col-md-6
                                //img.img-responsive(src='img/q4.jpg')
                                //img.img-responsive(src='img/q4.png')
                .modal-footer
                    button.btn.btn-primary(type='button' data-toggle='modal' data-target='#myModal') Question suivante
                    h3 Question #[span #{count} ] / #[span  #{numOfQuestions}]

block scripts
    script(src='js/script.js')
    script(src='js/app.js')

